<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema utama aplikasi -->
    <style name="Base.Theme.ScientificCalculator" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/gold</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="Theme.ScientificCalculator" parent="Base.Theme.ScientificCalculator" />

    <!-- Gaya khusus untuk tombol -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
